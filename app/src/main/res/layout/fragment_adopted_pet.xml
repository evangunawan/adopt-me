<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.AdoptedPetFragment">

    <TextView
        android:id="@+id/txtNone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/txtNone"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/adoptedRecView"
        app:layout_constraintEnd_toEndOf="@+id/adoptedRecView"
        app:layout_constraintStart_toStartOf="@+id/adoptedRecView"
        app:layout_constraintTop_toTopOf="@+id/adoptedRecView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adoptedRecView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>