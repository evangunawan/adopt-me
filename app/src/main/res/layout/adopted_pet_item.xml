<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/default_padding_x"
    android:paddingEnd="@dimen/default_padding_x"
    android:paddingTop="@dimen/default_padding_y"
    android:paddingBottom="@dimen/default_padding_y"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/aPetImage"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/aPetTitle"
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Pet Name" />

        <TextView
            android:id="@+id/aPetSubtitle"
            style="@style/TextSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Subtitle" />

    </LinearLayout>
    <ImageButton
        android:id="@+id/aPetBtnDelete"
        android:layout_width="52dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_weight="0"
        android:background="?attr/selectableItemBackgroundBorderless"
        />


</LinearLayout>